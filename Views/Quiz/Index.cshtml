@model List<QuizzApp.Models.QuizQuestion>

@{
    ViewData["Title"] = "Quiz";
}

<h2>Quiz</h2>

<form asp-action="Submit" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div>
            <h4>@Model[i].Question</h4>
            @for (int j = 0; j < Model[i].Options.Length; j++)
            {
                <label>
                    <input type="radio" name="selectedOptions[@i]" value="@j" required />
                    @Model[i].Options[j]
                </label>
                <br />
            }
        </div>
    }
    <button type="submit">Submit</button>
</form>